{
    "name": "hod-fashion",
    "version": "1.0.0",
    "description": "HOD Fashion",
    "main": "server.js",
    "scripts": {
        "watch:sass": "node-sass ./Frontend/sass/main.scss ./Frontend/css/style.css -w",
        "compile:sass": "node-sass ./Frontend/sass/main.scss ./Frontend/css/style.comp.css",
        "concat:css": "concat -o ./Frontend/css/style.concat.css ./Frontend/css/icon-font.css ./Frontend/css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" ./Frontend/css/style.concat.css -o ./Frontend/css/style.prefix.css",
        "compress:css": "node-sass ./Frontend/css/style.prefix.css ./Frontend/css/style.css --output-style compressed",
        "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
        "client": "cd Client && npm start",
        "server": "nodemon server.js",
        "build": "cd Client && npm run build",
        "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
        "start:prod": "set NODE_ENV=production&&nodemon server.js",
        "debug": "ndb server.js",
        "watch:js": "parcel watch ./Public/js/index.js --out-dir ./Public/js --out-file bundle.js",
        "build:js": "parcel build ./Public/js/index.js --out-dir ./Public/js --out-file bundle.js",
        "start": "node server.js",
        "heroku-postbuild": "cd Client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
    },
    "author": "DevCreek",
    "license": "ISC",
    "dependencies": {
        "@babel/polyfill": "^7.10.4",
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "concurrently": "^5.3.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^2.0.0",
        "express-rate-limit": "^5.1.3",
        "helmet": "^3.23.2",
        "hpp": "^0.2.3",
        "html-to-text": "^5.1.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.26",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "nodemailer": "^6.4.10",
        "pug": "^3.0.0",
        "sharp": "^0.25.4",
        "slugify": "^1.4.0",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "autoprefixer": "^9.8.6",
        "concat": "^1.0.3",
        "eslint": "^7.10.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.21.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "postcss-cli": "^7.1.1",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": "14.15.0",
        "npm": "6.14.6"
    }
}
